{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "@juanfv2/base-cms": {
      "projectType": "library",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "projects/base-cms",
      "sourceRoot": "projects/base-cms/src",
      "prefix": "base-cms",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/base-cms/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/base-cms/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/base-cms/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "projects/base-cms/tsconfig.spec.json",
            "inlineStyleLanguage": "scss"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/base-cms/**/*.ts", "projects/base-cms/**/*.html"]
          }
        }
      }
    }
  }
}
